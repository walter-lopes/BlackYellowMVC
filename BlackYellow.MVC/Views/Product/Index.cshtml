@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<BlackYellow.MVC.Domain.Entites.Product>



<div class="row">
    <div class="col-md-4 col-md-offset-3">
        <form action="" class="search-form">
            <div class="form-group has-feedback">
                <label for="search" class="sr-only">Procurar Produto</label>
                <input type="text" class="form-control" name="search" id="search" placeholder="Digite o produto...">
                <span class="fa fa-search form-control-feedback"></span>
            </div>
        </form>
    </div>
</div>

<a type="submit" href="/Product/Create" class="btn btn-info btn-circle"><i class="glyphicon glyphicon-asterisk"></i> Novo</a>


<table class="table table-sm">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Preço</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Name</td>
                <td> @item.Quantity</td>
                <td> @item.Price</td>
                <td><a href="@Url.Action("Edit", "Product", new { id = item.ProductId })" class="btn btn-info btn-circle"><i class="glyphicon glyphicon-edit"></i> Editar</a></td>
            </tr>
        }
       
    </tbody>
</table>
<!-- Modal -->

<a type="submit" href="/Product/Create" class="btn btn-info btn-circle"><i class="glyphicon glyphicon-asterisk"></i> Novo</a>


<hr />