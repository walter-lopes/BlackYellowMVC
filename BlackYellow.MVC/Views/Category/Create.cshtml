@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Cadastro de Categoria</h2>

<div class="row">
   
    <div class="col-lg-6">
        <div class="form-group">
            <label for="basic-url">Categoria</label>
            <div class="form-group">
                <input type="text" class="form-control" id="name" required aria-describedby="basic-addon3">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <label for="basic-url">Descrição</label>
        <div class="form-group">
            <input type="text" class="form-control" id="description" required aria-describedby="basic-addon3">
        </div>
    </div>
</div>
<div class="col-md-12">
    <button type="button" onclick="registerCategory()" id="btn-cadastrar" class="btn btn-primary btn-lg">Cadastrar</button>
</div>


<script src="~/js/admin/category/create.js"></script>