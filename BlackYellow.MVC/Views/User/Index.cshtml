@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model IEnumerable<BlackYellow.MVC.Domain.Entites.User>
<div class="row">
    <div class="col-md-4 col-md-offset-3">
        <form action="" class="search-form">
            <div class="form-group has-feedback">
                <label for="search" class="sr-only">Procurar Produto</label>
                <input type="text" class="form-control" name="search" id="search" placeholder="Digite o nome do usuário...">
                <span class="fa fa-search form-control-feedback"></span>
            </div>
        </form>
    </div>
</div>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Usuário</th>
            <th>Perfil</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@item.Profile.ToString()</td>
                <td></td>
            </tr>

        }

    </tbody>
</table>

<a type="submit" href="/Category/Create" class="btn btn-info btn-circle"><i class="glyphicon glyphicon-ok"></i></a>